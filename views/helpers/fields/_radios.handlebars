<div class="row">
    <div class="col-xs-12 col-md-5">
        <label class="control-label" for="{{id}}">{{label}}</label>
    </div>
    <div class="col-xs-12 col-md-5 col-lg-4">
        {{#hash options}}
        <label class="radio">
            <input type="radio"
                   id="{{id}}-{{key}}"
                   name="{{#if name}}{{name}}{{else}}{{to_input_name id}}{{/if}}"
                   value="{{key}}"
                   class="{{class}}"
                   {{#compare val to=key}}checked{{/compare}}/>
            {{value}}
        </label>
        {{/hash}}
    </div>
</div>
