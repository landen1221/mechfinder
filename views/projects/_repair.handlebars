<div class="control-group">
    <label class="control-label" for="repair">Service</label>
    <div class="controls">
        <input type="text" placeholder="" id="repair" name="repair" class="input-medium pull-left" value="{{p.repair}}" />
        <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
            <ul class="dropdown-menu" id="repair-list">
            {{#each repairs}}
                <li><a href="#">{{this}}</a></li>
            {{/each}}
            </ul>
        </div>
    </div>
</div>
<script type="text/javascript">
jQuery(function($) {
    $('#repair-list a').click(function() {
        $('#repair').val($(this).text());
        return false;
    });
});
</script>